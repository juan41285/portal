.hide-bullets {
    list-style:none;
    margin-left: -40px;
    margin-top:20px;
}

.thumbnail {
    padding: 0;
}

.carousel-inner>.item>img, .carousel-inner>.item>a>img {
    width: 100%;
}

.carousel-control.right {
    right: 0;
    left: auto;
    background: transparent !important;
  
}

.carousel-control.left {
    right: auto;
    left: 0;
    background: transparent !important;
  
}